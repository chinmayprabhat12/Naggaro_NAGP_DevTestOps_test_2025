<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Magento Test Suite - Groups">
	<test name="Smoke Tests">
		<groups>
			<run>
				<include name="smoke" />
			</run>
		</groups>
		<classes>
	<!--		<class name="com.test.tests.LoginTest" />-->
			<class name="com.test.tests.SearchTest" />
			<class name="com.test.tests.ProductTest" />
			
			
		</classes>
	</test>
	<test name="Regression Tests">
		<groups>
			<run>
				<include name="regression" />
			</run>
		</groups>
		<classes>
		<!--	<class name="com.test.tests.LoginTest" />-->
			<class name="com.test.tests.SearchTest" />
			<class name="com.test.tests.ProductTest" />
			
			

		</classes>
	</test>
</suite>
